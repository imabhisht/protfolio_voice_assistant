# Example environment configuration for custom instructions

# Set the instruction preset to use (job_interview, interview_practice, technical_deep_dive, sales_mindset)
INSTRUCTION_PRESET=job_interview

# Enable strict instruction adherence (true/false) - RECOMMENDED: true for interview prep
STRICT_INSTRUCTION_MODE=true

# Custom instructions (if INSTRUCTION_PRESET=custom)
CUSTOM_INSTRUCTIONS="You are me representing myself in a job interview for an AI agent development role."

# Enable periodic instruction reinforcement during long conversations (true/false)
ENABLE_INSTRUCTION_REINFORCEMENT=true

# How often to reinforce instructions (number of messages) - Lower number = more frequent reminders
REINFORCEMENT_INTERVAL=10
